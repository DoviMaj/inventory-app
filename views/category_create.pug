extends layout

block content
  form(action='/categories/new', method='POST' class='item-create-form') 
      h1 New Category
      
      div(class='form-div') 
        label(for='category') Title:
        input(type='text', name='category', value=(undefined=== name ? '' : name))
        label(for='description') Description: 
        input(type='text', name='description', value=(undefined===description ? '' : description))
      input(type='submit', value='Submit' class='submit-button')  
  if errors
    ul
      for error in errors
        li!= error.msg