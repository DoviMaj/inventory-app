extends layout

block content
  
  div(class='header')
    h1(class='')= title
    p Welcome to your inventory!
 
  div(class='items-wrapper')
    h1(class='items-title') Items:
    each item in data.item_list
        div(class='item-preview')
          a(href='/items/' + item._id) 
            img(src=item.img_url)
            p= item.name
            br
            br
            a(href='/categories/' + item.category._id) !{item.category.name}
